<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0A9A9"
    android:foregroundTint="#796A6A"
    tools:context=".Customization">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="108dp"
        android:fontFamily="sans-serif-black"
        android:text="Jessica's Piggy"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/necklacePig"
        android:layout_width="250dp"
        android:layout_height="195dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/necklace" />

    <ImageView
        android:id="@+id/cape"
        android:layout_width="113dp"
        android:layout_height="129dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/mask"
        app:layout_constraintEnd_toStartOf="@+id/crown"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pigcape" />

    <ImageView
        android:id="@+id/crown"
        android:layout_width="122dp"
        android:layout_height="128dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/necklace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cape"
        app:srcCompat="@drawable/pigcrown" />

    <ImageView
        android:id="@+id/mask"
        android:layout_width="105dp"
        android:layout_height="109dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/necklace"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pigmask" />

    <ImageView
        android:id="@+id/necklace"
        android:layout_width="113dp"
        android:layout_height="97dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mask"
        app:srcCompat="@drawable/pignecklace" />

    <Button
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="16dp"
        android:text="Graphs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mask" />

    <Button
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="16dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c3"
        app:layout_constraintStart_toEndOf="@+id/c1" />

    <Button
        android:id="@+id/c3"
        android:layout_width="124dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:text="Customize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/c2"
        app:layout_constraintTop_toBottomOf="@+id/necklace" />

</androidx.constraintlayout.widget.ConstraintLayout>